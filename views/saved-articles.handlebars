<!-- need a button that will submit user input into database -->
<div class="container px-5">

    <header class="p-5 text-center">
        <h1><i class="fas fa-newspaper"></i> Ars Technica News Saved Articles <i class="fas fa-atom"></i></h1>

    </header>
    <!-- LIST ARTICLES -->
    <div class="row pb-5">

        {{!-- <div class="card-group"> --}}
        {{#each data}}
        <div class="card mb-3 bg-dark text-light">
            <img class="card-img-top" src={{ img }} alt="Card image cap">
            <div class="card-body">
                <a href={{ link }}>
                    <h5 class="card-title">{{ title }}</h5>
                </a>
            </div>
            <div class="card-footer">
                <button class="add-note btn btn-primary mr-2" data-id={{ id }}>
                    <i class="fas fa-sticky-note"></i>
                </button>
                <button class="remove-article btn btn-warning mr-2" data-id={{ id }}>
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>
        {{/each}}
        {{!-- </div> --}}

        <!-- Add Note Modal -->
        <div id="add-note-modal" class="modal fade" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Notes for "<span id="modal-article-name"></span>"
                        </h5>
                        <h6>Article ID: <span id="modal-id"></span></h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="modal-notes">Notes Here</div>
                        <form>
                            <div class="form-group">
                                <label>Note</label>
                                <textarea id="note-message" rows="4" class="form-control"
                                    placeholder="Enter message here" required></textarea>
                            </div>
                            <button id="submit-note" class="btn btn-primary" type="submit">Add Note</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- END CONTAINER -->
</div>


<script src="assets/js/jquery_saved_articles.js"></script>
<!-- need a button that will submit user input into database -->
<div class="container semi-opaque px-5">
    <header class="p-5 text-center">
        <h1><i class="fas fa-newspaper"></i> Science News Scraper <i class="fas fa-atom"></i></h1>

    </header>
    <!-- LIST ARTICLES -->
    <div class="row pb-5 d-flex justify-content-between">

        <div id="articles" class='col-sm-12 col-md-6'>
            <h3 class="text-center">Saved Articles</h3>
            <!-- Create for each loop to create the burgers -->
            {{#each articles}}
                <div class="burger d-flex justify-content-between">
                    {{ title }}
                    <!-- Buttons -->
                    <button class="btn-article btn btn-primary" data-id={{ id }}>
                        <i class="fas fa-sticky-note"></i>
                        Add/Edit Note
                    </button>
                    <button class="btn-article btn btn-warning" data-id={{ id }}>
                        <i class="fas fa-trash"></i>
                        Delete Article
                    </button>
                </div>
            {{/each}}
        </div>
    </div>



    <!-- END CONTAINER -->
</div>

<script src="assets/js/jquery_saved_articles.js"></script>